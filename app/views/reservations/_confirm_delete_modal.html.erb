<div class="modal fade" id="confirmDeleteModal_<%= reservation.id %>" tabindex="-1" aria-labelledby="confirmDeleteModalLabel_<%= reservation.id %>" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmDeleteModalLabel_<%= reservation.id %>">Confirm Delete</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete <%= reservation.name %>'s reservation?
      </div>
      <div class="modal-footer">
        <%= button_to 'Delete', reservation_path(reservation.id), method: :delete, class: 'btn btn-danger', id: "confirm-delete-button-#{reservation.id}" %>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>